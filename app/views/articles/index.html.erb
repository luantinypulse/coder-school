<p id="notice"><%= notice %></p>

<form class="form-line">
  <%= form_tag(articles_path, :method => "get" , id: "search-form") do%>
  <%= text_field_tag :search, params[:search], placeholder: "Search Articles" %>
  <%= submit_tag "Search" %>
  <% end %>

</form>


<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Created At</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= time_ago_in_words(article.created_at) %></td>
        <td><%= @markdown.render(article.body).html_safe %></td>
        <td><%= link_to 'View', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Delete', article, method: :delete, data: { confirm: "Are you sure to detlete the article - #{article.title}" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

